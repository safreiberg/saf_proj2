<html>
<body>
  <h1>Item#list</h1>
  <p>Find me in app/views/item/list.html.erb</p>

  <table border="1">
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>ID</th>
      <th>Description</th>
    </tr>
    <% Product.find(:all).each do |product| %>
    <tr>
      <td><a href="/item/zoom/<%= product.id %>"><%= product.name %></a></td>
      <td><%= product.price %></td>
      <td><%= product.id %></td>
      <td><%= product.description %></td>
    </tr><% end %>
  </table>
</body>
</html>