
  <table border="1">
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
    </tr>
    <% Product.find(:all).each do |product| %>
    <tr>
      <td><a href="/item/zoom/<%= product.id %>"><%= product.name %></a></td>
      <td><%= product.price %></td>
      <td><%= product.description %></td>
    </tr><% end %>
  </table>